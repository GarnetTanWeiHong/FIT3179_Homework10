{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Bar chart with text labels. Set domain to make the frame cover the labels.",
  "width": 400, 
  "height": 300, 
  "data": {
    "url": "https://raw.githubusercontent.com/GarnetTanWeiHong/FIT3179_Data_Viz_2/main/data/Final.csv",
    "format": {
      "type": "csv",
      "parse": {
        "Year": "number",
        "Internet Users(%)": "number",
        "Broadband Subscription": "number"
      }
  }},
  "params": [
    {
      "name": "YearSelection",
      "value": 2001,
      "bind": {
        "input": "range",
        "min": 2001,
        "max": 2020,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "layer":[
    {
      "transform": [
        {"filter": "datum['Year'] == YearSelection" },
        {
          "window": [{"op": "rank", "as": "ranking"}],
          "sort": [{"field": "Internet Users(%)", "order": "descending"}]
        },
        {"filter": "datum.ranking <10"}
      ],
      "encoding": {
    "y": {"field": "Entity", "type": "ordinal","sort": "-x"},
    "x": {"field": "Internet Users(%)", "type": "quantitative", "scale": {"domain": [0, 110]}},
    "tooltip": [
          {"field": "Entity", "type": "nominal", "title": "Country"},
          {
            "field": "Internet Users(%)",
            "type": "quantitative",
            "title": "Percentage of Users"
          }
        ]
  },
  "layer": [{
    "mark": "bar"
  }, {
    "mark": {
      "type": "text",
      "align": "left",
      "baseline": "middle",
      "dx": 5
    },
    "encoding": {
      "text": {"field": "Internet Users(%)", "format":".2f", "type": "quantitative"}
      
    }
    }
  ]
  }

  ]
}